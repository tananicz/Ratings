@{
    int userRoleIndicator = ViewBag.UserRoleIndicator; //this value is set by Ratings.Filter.RoleAdderFilter
}

<!DOCTYPE html>
<html>
    <head>
        <title>Ratings</title>
        <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8"><vc:signed-in-user-component /></div>
                <div class="col-2"></div>
            </div>
            <div class="row">
                <div class="col-2"></div>
                <div class="col-1">
                    <nav>
                        <ul class="nav flex-column">
                            <li class="nav-item mt-3">
                                <a asp-controller="Ratings" asp-action="Index" class="btn btn-outline-primary w-100">Strona główna</a>
                            </li>
                            <li class="nav-item mt-3">
                                <a asp-controller="Ratings" asp-action="ShowArtists" class="btn btn-outline-primary w-100">Spis twórców</a>
                            </li>
                            @if (userRoleIndicator >= 3)
                            {
                                <li class="nav-item mt-3">
                                    <a asp-controller="Account" asp-action="ShowUsers" class="btn btn-outline-primary w-100">Zarządzanie użytkownikami</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
                <div class="col-7">@RenderBody()</div>
                <div class="col-2"></div>
            </div>
        </div>
    </body>
</html>