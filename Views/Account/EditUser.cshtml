@model UserViewModel

<div class="w-50">
    <h4 class="bg-primary text-center text-white p-2 mt-4 mb-4">Edycja użytkownika</h4>

    <form asp-action="PerformEditUser" method="post">
        <input asp-for="IdentityId" hidden />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-2">
            <label>Nazwa użytkownika</label>
            <div><span asp-validation-for="UserName" class="text-danger"></span></div>
            <input asp-for="UserName" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label>Hasło</label>
            <div><span asp-validation-for="Password" class="text-danger"></span></div>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label>Potwierdź hasło</label>
            <div><span asp-validation-for="CofirmPassword" class="text-danger"></span></div>
            <input asp-for="CofirmPassword" type="password" class="form-control" />
        </div>
        <div class="form-group mt-3">
            <div class="mb-2">Wybierz rolę:</div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="role" id="userRadioBtn" value="user" checked="@(Model.Role.Equals("user"))">
                <label class="form-check-label" for="userRadioBtn">Zwykły użytkownik</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="role" id="moderatorRadioBtn" value="moderator" checked="@(Model.Role.Equals("moderator"))">
                <label class="form-check-label" for="moderatorRadioBtn">Moderator</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="role" id="adminRadioBtn" value="admin" checked="@(Model.Role.Equals("admin"))">
                <label class="form-check-label" for="adminRadioBtn">Administrator</label>
            </div>
        </div>
        <div class="mt-4">
        <button type="submit" class="btn btn-primary">Zapisz</button>
        <a asp-action="ShowUsers" class="btn btn-secondary">Powrót</a>
        </div>
    </form>
</div>